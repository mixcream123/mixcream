     <script>



        var loader = document.getElementById("preloader");
        window.addEventListener("load", function () {
            loader.style.display = "none";
               setInterval(() => {
                if(typeof(document.querySelector("#html5-qrcode-button-camera-start")) != 'null'){
                    document.querySelector("#html5-qrcode-button-camera-start").innerHTML = "<button class='btn btn-success shake-rotate'>Bắt đầu quét</button>"
                }
            
                if(typeof(document.querySelector("#html5-qrcode-button-camera-stop")) != 'null'){
                    document.querySelector("#html5-qrcode-button-camera-stop").innerHTML = "<button class='btn btn-success shake-rotate'>Dừng quét</button>"
                }
            
                if(document.getElementsByTagName("option").item(0) != 'null'){
                    if (document.getElementsByTagName("option").item(0).innerHTML === 'camera2 1, facing front') {
                        document.getElementsByTagName("option").item(0).remove();
                    }
                }
    


                // document.querySelector("#html5-qrcode-button-camera-start").click();



                document.querySelector("#html5-qrcode-anchor-scan-type-change").style.display = 'none';


            }, 500)
        })




        //Check QR CODE


        const scanner = new Html5QrcodeScanner('reader', {
            // Scanner will be initialized in DOM inside element with id of 'reader'
            qrbox: {
                width: 250,
                height: 250,
            },  // Sets dimensions of scanning box (set relative to reader element width)
            fps: 120, // Frames per second to attempt a scan
        });



        // //Btn open
        document.querySelector('#checkQRicon').addEventListener('click', () => {
            document.getElementById('space_qr_check').style.display = 'block'
    
            scanner.render(success, error);
              document.getElementById('html5-qrcode-anchor-scan-type-change').style.display = 'none'
            // Starts scanner
        })





        function success(result) {

            document.getElementById("input_code").value = result;
            // document.getElementById('result').innerHTML = `
            //     <h2>Success!</h2>
            //     <p><a href="${result}">${result}</a></p>
            // `;

            // Prints result as a link inside result element

            scanner.clear();
            // Clears scanning instance

            document.getElementById('reader').remove();
            // Removes reader element from DOM since no longer needed

            //Fill data into input file
            // document.querySelector("#content_code").value = result;

        }

        function error(err) {
            console.error(err);
            // Prints any errors to the console
        }
